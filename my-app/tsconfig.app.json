{
  "compilerOptions": {
    "target": "esnext",                              // Target modern JavaScript
    "module": "esnext",                              // Use ES Modules
    "moduleResolution": "node",                      // Resolve modules like Node.js
    "jsx": "react-jsx",                              // Use React 17 JSX Transform
    "lib": ["dom", "esnext"],                        // Include DOM and ESNext types
    "strict": true,                                  // Enable strict type checking
    "esModuleInterop": true,                         // Ensure compatibility with CommonJS modules
    "skipLibCheck": true,                            // Skip type checking of declaration files for faster builds
    "forceConsistentCasingInFileNames": true,        // Enforce consistent casing in filenames
    "allowSyntheticDefaultImports": true,            // Allow default imports from non-ES modules
    "noImplicitAny": false,                          // Avoid implicit 'any' type errors
    "noUnusedLocals": true,                          // Warn about unused local variables
    "noUnusedParameters": true                       // Warn about unused function parameters
  },
  "include": [
    "src/**/*.ts",                                   // Include all TypeScript files in src
    "src/**/*.tsx"                                   // Include all TypeScript JSX files
  ],
  "exclude": [
    "node_modules"                                   // Exclude node_modules from type checking
  ]
}